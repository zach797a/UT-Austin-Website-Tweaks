{
  "manifest_version": 2,

  "name": "UT Austin Website Tweaks",
  "description": "This extension helps you register for classes more easily and more coming soon(TM).",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.jpeg",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://utdirect.utexas.edu/apps/registrar/course_schedule/*"],
      "css": ["style.css"],
      "js": ["myscript.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "clipboardRead",
    "clipboardWrite",
    "*://*/"
  ]
}
