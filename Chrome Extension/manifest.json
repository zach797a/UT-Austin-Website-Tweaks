{
    "manifest_version": 2,

    "name": "UT Austin Website Tweaks",
    "description": "This extension helps you register for classes more easily and more coming soon(TM).",
    "version": "0.1",

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
      "default_title": "UT Extension",
      "default_icon": "icon.jpeg",
      "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["*://utdirect.utexas.edu/apps/registrar/course_schedule/*"],
        "js": ["content.js"],
        "run_at": "document_idle",
        "all_frames": false
    }],
    "permissions": [
        "activeTab",
        "tabs",
        "clipboardRead",
        "clipboardWrite",
        "*://*/",
        "<all_urls>"
    ]
}
